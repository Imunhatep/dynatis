{% extends 'base.html.twig' %}

{% block title %}Package index{% endblock %}

{% block body %}
    <h1>Package index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Namespace</th>
                <th>Version</th>
                <th>Created</th>
                <th>Updated</th>
                <th>Touched</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for package in packages %}
            <tr>
                <td>{{ package.id }}</td>
                <td>{{ package.namespace }}</td>
                <td>{{ package.version }}</td>
                <td>{{ package.created ? package.created|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ package.updated ? package.updated|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ package.touched ? package.touched|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ package.status }}</td>
                <td>
                    <a href="{{ path('package_show', {'id': package.id}) }}">show</a>
                    <a href="{{ path('package_edit', {'id': package.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('package_new') }}">Create new</a>
{% endblock %}

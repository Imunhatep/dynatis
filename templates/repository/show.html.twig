{% extends 'base.html.twig' %}

{% block title %}Repository{% endblock %}

{% block body %}
    <h1>Repository</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ repository.id }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ repository.url }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ repository.type }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ repository.created ? repository.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ repository.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('repository_index') }}">back to list</a>

    <a href="{{ path('repository_edit', {'id': repository.id}) }}">edit</a>

    {{ include('repository/_delete_form.html.twig') }}
{% endblock %}

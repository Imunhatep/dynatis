{% extends 'base.html.twig' %}

{% block title %}Repository index{% endblock %}

{% block body %}
    <h1>Repository index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Url</th>
                <th>Type</th>
                <th>Created</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for repository in repositories %}
            <tr>
                <td>{{ repository.id }}</td>
                <td>{{ repository.url }}</td>
                <td>{{ repository.type }}</td>
                <td>{{ repository.created ? repository.created|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ repository.status }}</td>
                <td>
                    <a href="{{ path('repository_show', {'id': repository.id}) }}">show</a>
                    <a href="{{ path('repository_edit', {'id': repository.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('repository_new') }}">Create new</a>
{% endblock %}
